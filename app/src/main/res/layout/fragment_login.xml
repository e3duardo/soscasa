<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:padding="16sp"
    android:background="@mipmap/background"
    tools:context="br.com.magicbox.soscasa.fragment.LoginFragment">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30sp"
        android:src="@mipmap/ic_launcher"
        android:layout_gravity="center_horizontal"
        />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:orientation="vertical"
            android:weightSum="1"
            android:layout_marginTop="74dp"
            android:layout_below="@+id/icon"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">


            <Button
                android:text="clienteUid"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/client"
                />

            <Button
                android:text="profissional"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/prof"
                />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/to_text_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColorHint="#FFF">

                <AutoCompleteTextView
                    android:id="@+id/login_email"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:hint="E-mail"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#FFF">

            <AutoCompleteTextView
                android:id="@+id/login_senha"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:hint="Senha"/>
                />
            </android.support.design.widget.TextInputLayout>

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                />

            <Button
                android:layout_marginTop="50dp"
                android:id="@+id/button_login_email"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="bottom"
                android:text="Entrar"/>

            <com.facebook.login.widget.LoginButton
                android:id="@+id/button_entrar_facebook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                facebook:com_facebook_login_text="Entrar com Facebook"/>



            <TextView
                android:id="@+id/button_cadastrar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:onClick="button_cadastrar"
                android:textColor="#ff0000"
                android:text="Cadastrar"/>

            <TextView
                android:id="@+id/redefinir_senha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Redefinir Senha"
                android:textColor="#ff0000"/>

        </LinearLayout>


</RelativeLayout>
